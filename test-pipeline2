pipeline {
    agent { label 'dev-build.globalvirtual.world' }
    stages {
     withEnv(['PATH+EXTRA=/usr/sbin:/usr/bin:/sbin:/bin'])        
     stage('build') {
            steps {
                echo "Hello World!"
                sh "echo Hello from the shell"
                sh "hostname"
                sh "uptime"
            }
        }
    }
}
